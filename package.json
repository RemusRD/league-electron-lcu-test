{
  "name": "TFT-poll-maker",
  "version": "0.0.14",
  "license": "MIT",
  "main": "main/index.js",
  "author": {
    "name": "Remus Richard"
  },
  "description": "Electron prototyping.",
  "keywords": [
    "vite",
    "react",
    "electron",
    "typescript"
  ],
  "productName": "TFT-poll-maker",
  "scripts": {
    "dev": "concurrently \"yarn dev:vite\" \" yarn dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "npm run build:electron && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "clean": "rimraf dist main src/out",
    "type-check": "tsc",
    "lint": "eslint . --ext js,jsx,ts,tsx",
    "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix",
    "release": "yarn build && electron-builder -p always"
  },
  "dependencies": {
    "@twurple/api": "^5.2.2",
    "@twurple/auth": "^5.2.2",
    "@twurple/auth-electron": "^5.2.2",
    "@twurple/chat": "^5.2.2",
    "@vitejs/plugin-react": "^1.3.2",
    "dotenv": "^16.0.2",
    "electron-fetch": "^1.7.4",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.2.1",
    "lcu-connector": "^2.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "twitch": "^4.6.7",
    "twitch-chat-client": "^4.6.7",
    "vite": "^3.1.0",
    "vite-plugin-electron": "^0.8.4"
  },
  "devDependencies": {
    "@types/node": "^17.0.22",
    "@types/react": "^17.0.41",
    "@types/react-dom": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "@typescript-eslint/parser": "5.16.0",
    "autoprefixer": "^10.4.8",
    "concurrently": "^7.4.0",
    "electron": "^17.2.0",
    "electron-builder": "^23.3.3",
    "eslint": "8.23.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "^7.29.4",
    "postcss": "^8.4.12",
    "prettier": "2.7.1",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.6.2"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "src/out"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": "x64"
      }
    },
    "publish": {
      "provider": "github",
      "owner": "RemusRD",
      "repo": "league-electron-lcu-test",
      "releaseType": "release"
    }
  }
}
